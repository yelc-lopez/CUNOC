<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tamanio_cards"
    android:layout_marginTop="20dp">




<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content">

<ImageView
    android:id="@+id/imagenTarjeta2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:scaleType="centerCrop"
    android:src="@drawable/ingenier_a_estudiantes1"
    android:transitionName="@string/noticia1" />

<TextView
    android:id="@+id/tituloTarjeta2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:background="@color/colorFondoCard"
    android:gravity="center|bottom"
    android:text="@string/noticia2"
    android:textColor="@android:color/white"
    android:textSize="@dimen/texto_cards" />

<TextView
    android:id="@+id/detalle_Tarjeta2"
    android:layout_width="0dp"
    android:layout_height="0dp" />

</RelativeLayout>


    </android.support.v7.widget.CardView>